" COLORS!
syntax enable
sy on
set background=dark
set t_Co=256
colorscheme Tomorrow-Night-Bright 

" SPACES AND TABS!
set tabstop=4
set softtabstop=4

set number
set ruler
set showcmd
set cursorline

set wildmenu
set lazyredraw
set showmatch

"FOLDING!
"set foldmethod=indent
"set foldcolumn=2
"set foldnestmax=2

"MOUSE CONTROL!
set mouse=a

"SEARCHING!
set incsearch
